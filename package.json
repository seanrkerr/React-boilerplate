{
  "name": "opinionated-react-boilerplate",
  "version": "1.0.3",
  "description": "a simple yet powerful boilerplate for reactjs",
  "keywords": [
    "Reactjs",
    "Parceljs",
    "Babel7",
    "Redux",
    "starter",
    "boilerplate"
  ],
  "author": "Sean Kerr",
  "license": "ISC",
  "scripts": {
    "test": "jest -u",
    "test-watch": "jest --watch",
    "start": "parcel index.html --no-cache --port 3000",
    "build:prod": "parcel build index.html",
    "cypress-local": "node_modules/.bin/cypress open --config baseUrl=http://localhost:1234"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-env": "7.5.0",
    "@babel/preset-react": "^7.7.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^8.0.9",
    "babel-jest": "^24.9.0",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "core-js": "^3.4.5",
    "cypress": "^3.7.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-pwa-manifest": "^2.5.6",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.11.0",
    "parceljs": "^0.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.18",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "rebass": "^3.2.2",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.4.1"
  },
  "alias": {
    "react-dom": "@hot-loader/react-dom"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "transform": {
    "\\.js$": "<rootDir>/node_modules/babel-jest"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "cypress",
      "node_modules"
    ]
  },
  "pwaManifest": {
    "name": "opinionated react boilerplate",
    "shortName": "boilerplate",
    "startURL": "./",
    "theme": "#add8e6",
    "generateIconOptions": {
      "baseIcon": "./src/assets/react.svg",
      "sizes": [
        192,
        384,
        512
      ],
      "genFavicons": true
    }
  }
}
